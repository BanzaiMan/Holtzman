{
  "name": "core",
  "tasks": {
    "javascript": {
      "src": "raw/**/*",
      "dest": "out/packages"
    },
    "markup": {
      "src": "raw/**/*",
      "dest": "out/packages",
      "minify": false
    },
    "copy": {
      "src": "out/packages/newspring:core/**/*",
      "out": "/",
      "dest": "./",
      "order": "post"
    },
    "meteor-load": {
      "endpoint": "NewSpring/norma-meteor-load",
      "src": "out/packages/newspring:core/**/*",
      "dest": "out/packages/newspring:core",
      "version": "0.1.0",
      "org": "newspring",
      "package": {
        "versionsFrom": "1.0.3.1",
        "use": {
          "meteor-platform": "both",
          "http": "both",
          "iron:router": "both",
          "accounts-password": "both",
          "bjwiley2:api-tokens": "both",
          "cfs:http-methods": "both",
          "bjwiley2:server-watch": "both",
          "aldeed:collection2": "both"
        },
        "export": {
          "Rock": "both",
          "Apollos": "both"
        }
      },
      "test": {
        "mocha-casperjs": "both"
      }
    },
    "meteor": {
      "src": "out",
      "build": {
        "dest": "build",
        "server": "localhost:3000"
      },
      "packages": [
        "meteor-platform",
        "newspring:core"
      ],
      "platforms": [
        "server",
        "browser",
        "ios"
      ]
    },
    "mocha-casperjs": {
      "src": "out/packages/tests/**/*"
    }
  },
  "scripts": {
    "postinstall": "./norma-ignore/postinstall.coffee"
  }
}